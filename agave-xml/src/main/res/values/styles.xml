<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Type scale text material-->

    <style name="h1">
        <item name="android:textSize">@dimen/text_75</item>
        <item name="android:fontFamily">@font/barlowbold</item>
    </style>

    <style name="h2">
        <item name="android:textSize">@dimen/text_60</item>
        <item name="android:fontFamily">@font/barlow_light</item>
    </style>

    <style name="h3">
        <item name="android:textSize">@dimen/text_45</item>
        <item name="android:fontFamily">@font/barlowregular</item>
    </style>

    <style name="h4">
        <item name="android:textSize">@dimen/text_35</item>
        <item name="android:fontFamily">@font/barlowbold</item>
    </style>

    <style name="h5">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:fontFamily">@font/barlowbold</item>
    </style>

    <style name="h6">
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:fontFamily">@font/barlowbold</item>
    </style>

    <style name="subtitle1">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:fontFamily">@font/barlowmedium</item>
    </style>

    <style name="subtitle2">
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:fontFamily">@font/barlowsemibold</item>
    </style>

    <style name="body1">
        <item name="android:textSize">@dimen/text_17</item>
        <item name="android:fontFamily">@font/barlowsemibold</item>
    </style>

    <style name="body2">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:fontFamily">@font/barlowsemibold</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/barlowsemibold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="caption">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:fontFamily">@font/barlowregular</item>
    </style>

    <style name="overline">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/barlowsemibold</item>
    </style>

    <!--  ....End type scale text material-->

    <style name="ButtonTertiaryStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:fontFamily">@font/barlowsemibold</item>

    </style>

    <style name="ButtonPrimaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:fontFamily">@font/barlowsemibold</item>
    </style>

    <style name="ButtonSecondaryStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/secondary500</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:fontFamily">@font/barlowsemibold</item>
    </style>

</resources>